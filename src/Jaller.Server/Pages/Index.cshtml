@page
@model Jaller.Server.Pages.HomeModel

@{
    ViewData["Title"] = "File Browser";
}

@section extrahead {
    <!-- Blazor Stuff -->
    <base href="/" />
    <link href="/css/blazor.css" rel="stylesheet" />
}

@section scripts {
    <script src="_framework/blazor.webassembly.js"></script>
}

<div id="app">
    <svg class="loading-progress">
        <circle r="40%" cx="50%" cy="50%" />
        <circle r="40%" cx="50%" cy="50%" />
    </svg>
    <div class="loading-progress-text"></div>
</div>
<noscript>
    <div class="row">
        <div class="col-md-12">
            JavaScript is needed in order to view the interactive file browser.
        </div>
    </div>
</noscript>
<div class="row">
    <div class="col-md-12">
        <em>Slow connection?  Try the <a href="/Folder">basic view</a>.</em>
    </div>
</div>