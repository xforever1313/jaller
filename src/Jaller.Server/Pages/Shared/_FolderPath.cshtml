@model IReadOnlyList<JallerFolder>?

@if( this.Model is not null )
{
    <div class="row">
        <div class="col-md-12">
            <div class="folder-breadcrumbs">
                <span><a href="/Folder">Root</a></span><span> / </span>
                @foreach( JallerFolder folder in this.Model )
                {
                    <span><a href="/Folder?id=@folder.Id">@folder.Name</a></span><span> / </span>
                }
            </div>
        </div>
    </div>
}
