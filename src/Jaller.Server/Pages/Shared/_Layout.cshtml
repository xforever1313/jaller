@{
    string title = "Untitled Page";
    if (this.ViewData.TryGetValue("Title", out object? titleModel))
    {
        title = titleModel?.ToString() ?? title;
    }
}
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta content="en-us" http-equiv="Content-Language" />
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <title>@title</title>

    <!-- BOOTSTRAP STYLES -->
    <link href="/css/bootstrap.css" rel="stylesheet" />

    <!-- Binary Theme Styles -->
    <link href="/css/basic.css" rel="stylesheet" />
    <link href="/css/custom.css" rel="stylesheet" />

    <!-- Jaller-specific styles -->
    <link href="/css/jaller.css" rel="stylesheet" />

    <!-- Font-Awesome -->
    <link rel="stylesheet" href="/css/fa.fontawesome.min.css">
    <link rel="stylesheet" href="/css/fa.brands.min.css">
    <link rel="stylesheet" href="/css/fa.regular.min.css">
    <link rel="stylesheet" href="/css/fa.solid.min.css">
    <link rel="stylesheet" href="/css/fa.v5-font-face.min.css">

    @RenderSection("extrahead", required: false)
</head>
<body>
    @RenderBody()

    <!-- Page-specific scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>
