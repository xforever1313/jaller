@page
@model Jaller.Server.Pages.Folder.IndexModel

@if( this.Model.JallerFolder is null )
{
    ViewData["Title"] = "Can not find folder";

    <div class="alert alert-danger">
        @if( this.Model.ErrorMessage is null )
        {
            <p>Unknown Error :(</p>
        }
        else
        {
            <p>@this.Model.ErrorMessage</p>
        }
    </div>
}
else
{
    ViewData["Title"] = $"Folder: {this.Model.JallerFolder.Name}";

    if( this.Model.JallerFolder.Id != 0 )
    {
        // If we are not already the root folder, we can add a button to go up one directory.
        // If the parent directory is the root folder, then we can point it to the root
        // directory by setting the parent ID to 0.
        int parentId = this.Model.JallerFolder.ParentFolder ?? 0;

        <div class="row">
            <div class="col-md-12">
                <p>
                    <a href="/Folder?id=@parentId">
                        <i class="fa-regular fa-square-caret-up"></i> Go to parent folder...
                    </a>
                </p>
            </div>
        </div>
    }

    if( this.Model.FolderContents.IsNullOrEmpty() )
    {
        <div class="row">
            <div class="col-md-12">
                <p>Folder contains no contents.</p>
            </div>
        </div>
    }
    else
    {
        @if( this.Model.FolderContents.ChildFolders?.Any() ?? false )
        {
            <div class="row">
                <div class="col-md-12">
                    <h3>Sub-Folders</h3>
                    <ul class="no-bullets">
                    @foreach( JallerFolder folder in this.Model.FolderContents.ChildFolders )
                    {
                        <li>
                            <a href="/Folder?id=@folder.Id">
                                <i class="fa-solid fa-folder"></i> @folder.Name
                            </a>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        }

        @if( this.Model.FolderContents.Files?.Any() ?? false )
        {
            <div class="row">
                <div class="col-md-12">
                    <h3>Files</h3>
                    <ul class="no-bullets">
                        @foreach( JallerFile file in this.Model.FolderContents.Files )
                        {
                            <li>
                                <a href="/File?cid=@file.CidV1">
                                    <i class="fa-solid fa-file"></i> @file.Name
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    }
}
