@page
@model Jaller.Server.Pages.Folder.FolderDeleteConfirmationModel

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @if( this.Model.DeletedFolderId is null )
                {
                    <p>
                        Folder with invalid ID... you just went to this address directly, didn't you?
                    </p>
                }
                else
                {
                    <p>
                        Folder Deleted!  Its ID was @this.Model.DeletedFolderId.
                    </p>
                }
            </div>
            <div class="panel-footer">
                <a href="/"><i class="fa-solid fa-house"></i> Return Home</a>
            </div>
        </div>
    </div>
</div>
